    "vlucas/valitron": "1.2.4",
    "illuminate/database": "5.2.28",
    "illuminate/pagination": "5.2.28",
    "vlucas/phpdotenv": "^2.2",
    "robmorgan/phinx": "0.5.3",
    "league/event": "2.1.2",
    "pimple/pimple": "3.0.2"
  },

  "require-dev": {
    "phpunit/phpunit": "5.0.10"
  },

  "autoload": {
    "psr-4": {
      "Nirk\\" :"src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Nirk\\Test\\": "tests/"
    }
  }
}
