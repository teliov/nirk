  "authors": [
    {
      "name": "Obinna Agba",
      "role": "developer",
      "email": "obinna@mobnia.com",
      "homepage": "http://www.mobnia.com"
    }
  ],

  "keywords": [
    "jama"
  ],

  "require" : {
